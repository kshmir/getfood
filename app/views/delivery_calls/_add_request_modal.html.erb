<!-- Button to trigger modal -->
<a href="#myModal" role="button" class="btn" data-toggle="modal">New</a>
<!-- Modal -->
<div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel"><%=DeliveryRequest.model_name.human.titleize %></h3>
  </div>

  <%= semantic_form_for(:delivery_request, url: delivery_call_delivery_requests_path(@delivery_call)) do |f| %>
    
    <div class="modal-body">

      <%= f.input :menu_ids, as: :select, collection: @menus, label: DeliveryRequest.human_attribute_name(:menus), input_html: { class: 'chosen-select2'} %> <!-- todo: fix para que funcione con chosen -->
      <%= f.input :user_id, as: :hidden, input_html: { value: current_user.id} %> 
      <%= f.input :delivery_call_id, as: :hidden, input_html: {value: @delivery_call.id } %>
     

    </div> 

    <div class="modal-footer"> 

     
      <%= f.action :submit, :as => :input%>   
      <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
   
    </div>

  <% end %>  
  
  
</div>

